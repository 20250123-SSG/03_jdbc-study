<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="selectMenuByCategory">
        SELECT
            menu_code
            ,menu_name
            ,menu_price
        FROM
            tbl_menu
        WHERE
            category_code = ?
        AND orderable_status = "Y"
    </entry>


    <!-- 주문 테이블에 먼저 insert-->
    <entry key="insertOrder">
        INSERT INTO
            tbl_order
            (
                order_date
                ,order_time
                ,total_order_price
            )
        VALUES
        (
            DATE_FORMAT(  CURDATE(), '%y/%m/%d' ) <!--쿼리에서 바로 추가-->
            ,DATE_FORMAT( CURTIME(), '%H:%i:%s' )
            ,?
        )
    </entry>

    <entry key="selectCurrOrderCode">
        SELECT
            LAST_INSERT_ID() AS curr_order_code
    </entry>

    <entry key="insertOrderMenu">
        INSERT INTO
            tbl_order_menu
            (
                order_code
                ,menu_code
                ,order_amount
            )
        VALUES
        (
            ?
            ,?
            ,?
        )
    </entry>

</properties>